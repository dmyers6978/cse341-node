<!DOCTYPE html>
<html>
<head>
  <%- include ("../partials/header.ejs") %>
</head>
<body>
  <%- include ("../partials/nav.ejs") %>
  <% if(typeof message !== 'undefined' && message){ %>
    <p><%= message %></p>
    <% } %>
  <% if(results.length > 1){ %>
    <table><thead><tr><th>Recipe Name</th><th>Recipe Description</th><th>Owner</th><th>Date Added</th></tr></thead><tbody>
    <% results.forEach(function(r) { %>
    <tr><td><%= r.recipename %></td><td><%= r.recipedesc %></td><td><%= r.fname %> <%= r.lname %></td><td><%= r.datetime %></td></tr>
<% }); %>
</tbody></table>
<% } else{ %>
  <p>Nothing to show here.</p>
  <% }; %>
</body>
</html>
<% delete message; %>
